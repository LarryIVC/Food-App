<h2> Add a new food </h2>

<%= form_for @food do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :measurement_unit %>
  <%= f.text_field :measurement_unit %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :quantity %>
  <%= f.text_field :quantity %>

  <%= f.submit "Add food" %>
<% end %>